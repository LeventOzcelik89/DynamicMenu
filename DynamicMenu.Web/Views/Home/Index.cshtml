<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mobile Banking Menu</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>

    <div class="mobilContainer">

            <div id="app" class="app">
                <!-- Ana Menü -->
                <div class="page" id="main-menu" data-page="main">
                    <header>
                        <h1>İşlemler</h1>
                    </header>
                    <main>
                        <div class="menu-container">
                            <div class="menu-item" data-page="para-transferleri">
                                <i class="fas fa-exchange-alt"></i>
                                <span>Para Transferleri</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>

                            <div class="menu-item" data-page="odemeler">
                                <i class="fas fa-money-bill-wave"></i>
                                <span>Ödemeler</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>

                            <div class="menu-item" data-page="kart-islemleri">
                                <i class="fas fa-credit-card"></i>
                                <span>Kart İşlemleri</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>

                            <div class="menu-item" data-page="yatirim">
                                <i class="fas fa-chart-line"></i>
                                <span>Yatırım ve Hisse Senedi</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>

                            <div class="menu-item" data-page="doviz">
                                <i class="fas fa-coins"></i>
                                <span>Döviz ve Altın</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>

                            <div class="menu-item" data-page="plus-limit">
                                <i class="fas fa-plus-circle"></i>
                                <span>Plus Limit</span>
                                <span class="badge">Yeni</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>

                            <div class="menu-item" data-page="kredi">
                                <i class="fas fa-hand-holding-usd"></i>
                                <span>Kredi İşlemleri</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>

                            <div class="menu-item" data-page="masraf-paketi">
                                <i class="fas fa-file-invoice-dollar"></i>
                                <span>Hesaplı Bankacılık Masraf Paketi</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>

                            <div class="menu-item" data-page="hesap">
                                <i class="fas fa-wallet"></i>
                                <span>Hesap İşlemleri</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>

                            <div class="menu-item" data-page="basvuru">
                                <i class="fas fa-file-alt"></i>
                                <span>Başvurular</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>

                            <div class="menu-item" data-page="sigorta">
                                <i class="fas fa-umbrella"></i>
                                <span>Sigorta ve Bireysel Emeklilik</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>

                            <div class="menu-item" data-page="emeklilik">
                                <i class="fas fa-piggy-bank"></i>
                                <span>Emeklilik İşlemleri</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>

                            <div class="menu-item" data-page="karekod">
                                <i class="fas fa-qrcode"></i>
                                <span>Karekod İşlemleri</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                        </div>
                    </main>
                </div>

                <!-- Para Transferleri Sayfası -->
                <div class="page hidden" id="para-transferleri" data-page="para-transferleri">
                    <header>
                        <button class="back-button" data-target="main-menu">
                            <i class="fas fa-arrow-left"></i>
                        </button>
                        <h1>Para Transferleri</h1>
                    </header>
                    <main>
                        <div class="menu-container">
                            <div class="menu-item">
                                <i class="fas fa-bookmark"></i>
                                <span>Kayıtlı Transferler</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-exchange-alt"></i>
                                <span>Hesaplarım Arası Transfer</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-tasks"></i>
                                <span>Transfer Emirleri</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>Kolay Adres</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-clock"></i>
                                <span>Ödeme İste</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                        </div>
                    </main>
                </div>

                <!-- Ödemeler Sayfası -->
                <div class="page hidden" id="odemeler" data-page="odemeler">
                    <header>
                        <button class="back-button" data-target="main-menu">
                            <i class="fas fa-arrow-left"></i>
                        </button>
                        <h1>Ödemeler</h1>
                    </header>
                    <main>
                        <div class="menu-container">
                            <div class="menu-item">
                                <i class="fas fa-file-invoice"></i>
                                <span>Fatura Ödeme Talimatlarım</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-history"></i>
                                <span>Kayıtlı Ödemeler</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-clock"></i>
                                <span>Son Ödemeler</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-building"></i>
                                <span>Fatura ve Kurum Ödemesi</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-mobile-alt"></i>
                                <span>GSM Ödeme/TL Yükleme</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-credit-card"></i>
                                <span>Kredi Kartı Borç Ödeme</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-hand-holding-usd"></i>
                                <span>Kredi Ödeme</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-landmark"></i>
                                <span>Vergi ve Devlet Ödemeleri</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-hospital"></i>
                                <span>SGK İşlemleri</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-car"></i>
                                <span>MTV ve Trafik Ceza Ödemesi</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-graduation-cap"></i>
                                <span>HGS İşlemleri</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-receipt"></i>
                                <span>Senet Ödemesi</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="menu-item">
                                <i class="fas fa-gift"></i>
                                <span>Bağış Ödemesi</span>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                        </div>
                    </main>
                </div>
            </div>

        <nav class="bottom-nav">
            <div class="nav-item active">
                <i class="fas fa-home"></i>
                <span>Ana Sayfa</span>
            </div>
            <div class="nav-item">
                <i class="fas fa-wallet"></i>
                <span>Hesap/Kart</span>
            </div>
            <div class="nav-item">
                <i class="fas fa-list"></i>
                <span>İşlemler</span>
            </div>
            <div class="nav-item">
                <i class="fas fa-file-alt"></i>
                <span>Başvuru</span>
            </div>
            <div class="nav-item">
                <i class="fas fa-chart-pie"></i>
                <span>Varlıklar</span>
            </div>
        </nav>

    </div>


    <script src="~/lib/jquery/jquery-3.7.1.min.js"></script>
    <script src="js/main.js"></script>

</body>
</html>
