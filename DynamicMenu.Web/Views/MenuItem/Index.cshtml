<!-- Menü Tablosu Sayfası -->
<div class="page" id="list" data-page="menu-list">
    <main>
        <div class="action-buttons top-buttons">
            <a data-href="/MenuItem/Insert" class="action-button" id="new-menu" data-modal="">
                <i class="fas fa-plus"></i>
                <span>Yeni Menü Ekle</span>
            </a>
        </div>

        <div class="data-table-container">
            <table class="uk-table uk-table-hover uk-table-striped" id="tbl">
                <thead class="table-light">
                    <tr>
                        <th>Keyword</th>
                        <th>Pid</th>
                        <th>Is New</th>
                        <th>Sort Order</th>
                        <th>Menu Id</th>
                        <th>Menu Base Item Id</th>
                        <th>Menu Group Id</th>

                        <th>Base Adı</th>
                        <th>Base Adı (En)</th>
                        <th>Base icon</th>

                        <th>Oluşturma Tarihi</th>
                        <th>Düzenleme Tarihi</th>
                        <th style="width: 120px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </main>
</div>

<script type="text/template" id="tblRow">

    <tr>

        Keyword
        Pid
        IsNew
        SortOrder
        MenuId
        MenuBaseItemId
        MenuGroupId

        <td>{{data.Text}}</td>
        <td>{{data.TextEn}}</td>
        <td>{{data.IconPath}}</td>

        <td>{{data.CreatedDate == null ? '-' : new Date(data.CreatedDate).toLocaleString('tr-TR')}}</td>
        <td>{{data.ModifiedDate == null ? '-' : new Date(data.ModifiedDate).toLocaleString('tr-TR')}}</td>
        <td>
            <div class="btn-group" role="group">
                <a data-href="/MenuItem/Update/{{data.Id}}" class="btn btn-sm btn-primary" data-id="{{data.Id}}" data-modal>Düzenle</a>
                <a data-href="/MenuItem/Delete?Id={{data.Id}}" data-modal data-ask class="btn btn-sm btn-info">Sil</a>
            </div>
            </td>
        </tr>

</script>

@section Scripts {

    <script type="text/javascript">

        var page = {

            tbl: null,
            ready: function(){

                ReadData('/MenuBaseItem/GetAll', null, function(res){

                    $.each(res, function(i,item){
                        TemplateEngine.RenderTo($('#tblRow'), item, $('#tbl tbody'));
                    });

                    $('#tbl').dataTable({
                    responsive: true,
                    language: {
                        url: 'lib/dataTables/tr.json'
                    }
                    });

                });

            }

        };


        $(document)

        .ready(function () {

            page.ready();

        })

        ;

    </script>

}