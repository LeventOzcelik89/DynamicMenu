@model DynamicMenu.API.DTOs.CreateMenuDto
@{
    ViewBag.Title = "Menu Insert";
}

<div class="form-container">
    <form id="customForm" data-formType="ajax" method="post" action="/Menu/Insert" class="needs-validation" novalidate>

        @Html.HiddenFor(a => a.MenuGroupId)
        @Html.DropDownFor(a => a.MenuTarget, "Menu Target ID", "/Menu/GetMenuTargets", "Lütfen Menü Target seçin", "item.Key", "item.Value")

        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            @Html.TextBoxFor(a => a.Name, null, new Dictionary<string, object> { { "class", "form-control" }, { "required", "required" } })
            <div class="invalid-feedback">Boş bırakılamaz</div>
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            @Html.TextBoxFor(a => a.Description, null, new Dictionary<string, object> { { "class", "form-control" }, { "required", "required" } })
            <div class="invalid-feedback">Boş bırakılamaz</div>
        </div>

        <div class="mb-3 form-check">
            <label for="IsActive" class="form-check-label">IsActive</label>
            @Html.CheckBoxFor(a => a.IsActive, new Dictionary<string, object> { { "class", "form-check-input" } })
        </div>

        <div class="d-flex justify-content-end">
            <button class="btn btn-secondary">Vazgeç</button>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>

    </form>
</div>